<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input_root_avi_layout"
    android:layout_width="match_parent"
    android:layout_height="91dip"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/c_gray_line"
        />


    <EditText
        android:id="@+id/chat_input_et"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="10dp"
        android:layout_toLeftOf="@+id/ll_sendRedPack"
        android:textColor="@color/black"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:imeOptions="actionSend"
        android:hint="轻触输入"
        android:background="@color/white"
        android:textCursorDrawable= "@null"
        />
    <!--android:background="@drawable/key_edit_bg"-->


    <RelativeLayout
        android:id="@+id/input_re_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        >

        <ImageView
            android:id="@+id/add_img"
            android:layout_width="28dip"
            android:layout_height="28dip"
            android:layout_centerVertical="true"
            android:padding="2dip"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="8dp"
            />

        <ImageView
            android:id="@+id/icon_img"
            android:layout_width="28dip"
            android:layout_height="28dip"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="39dp"
            android:padding="2dip"
            android:layout_toRightOf="@id/add_img"
            />

        <ImageView
            android:id="@+id/iv_c_lock"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_marginLeft="5dip"
            android:layout_centerInParent="true"
        />

        <!--android:background="@drawable/button_recordnormal"-->
        <LinearLayout
            android:id="@+id/ll_sendRedPack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="5dip"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/iv_sendMsg"
                android:layout_width="28dip"
                android:layout_height="28dip"
                android:padding="2dip"
                android:src="@mipmap/send_gray"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
    </RelativeLayout>


