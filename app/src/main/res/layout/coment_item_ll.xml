<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="7dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_lock_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="0.7dip"
            android:layout_marginRight="3dip"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_comentName"
            android:layout_marginRight="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="姓名："
            android:textColor="@color/black"
            android:textSize="@dimen/commtent_text_size"
            />
        <ImageView
            android:id="@+id/iv_commentEmo"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_comentContent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/commtent_text_size"
            tools:text="fjfjlf"
            />
        <ImageView
            android:id="@+id/iv_commentRedPack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            />
    </LinearLayout>

    <com.bm.feipingflyclip.activity.search.view.CImageView
        android:layout_marginTop="3dip"
        android:id="@+id/civ_coment"
        android:layout_width="100dip"
        android:layout_height="50dip"
        tools:visibility="visible"
        android:visibility="gone"
        />

</LinearLayout>